version: v3
teleport:
  nodename: {{ ansible_hostname }}
  data_dir: /var/lib/teleport
  join_params:
    token_name: {{ teleport_token }}
    method: token
  proxy_server: {{ teleport_cluster }}:443
  log:
    output: stderr
    severity: INFO
    format:
      output: text
  diag_addr: ""
auth_service:
  enabled: "no"
ssh_service:
  enabled: "yes"
  pam:
    enabled: "yes"
    service_name: "sshd"
  labels:
    role: {{ device_roles[0] }}
    tenant: {{ tenants[0] }}
    site: {{ sites[0] }}
  commands:
  - name: hostname
    command: [hostname]
    period: 1m0s
proxy_service:
  enabled: "no"
  https_keypairs: []
  https_keypairs_reload_interval: 0s
  acme: {}
app_service:
  enabled: "{{ 'yes' if teleport_apps | length > 0 else 'no' }}"
  apps:
{% for app in teleport_apps %}
  -  name: "{{ app.name }}"
     uri: "{{ app.url }}"
     public_addr: "{{ app.name }}.teleport.ethquokkaops.io"
{% endfor %}
{% for svc in services if svc.custom_fields.expose_mode == "teleport" %}
  -  name: "{{ svc.custom_fields.teleport_name }}"
     uri: "http://127.0.0.1:{{ svc.ports[0] }}"
     public_addr: "{{ svc.custom_fields.teleport_name }}.teleport.ethquokkaops.io"
{% endfor %}
